.detail-box .item {
  padding: 8px;
}
.detail-box .item .title {
  position: relative;
  width: 100%;
  line-height: 32px;
  font-size: 16px;
  color: #FF88AF;
  border-bottom: 1px solid #FF88AF;
}
.detail-box .item .content {
  padding: 0 8px;
  margin: 8px 0;
}
.detail-box .item .content .txt {
  font-size: 14px;
  color: #3A404E;
}
.detail-box .item .images-box {
  position: relative;
  width: 100%;
  margin: 8px 0;
  box-sizing: border-box;
}
.detail-box .item .images-box .img-item {
  margin: 8px 0;
  width: 100%;
  border-radius: 5px;
  box-shadow: 0px 0 5px rgba(0, 0, 0, 0.2);
  background: #eeeeee;
}
.detail-box .item .images-box .banner-ad {
  padding: 5px;
  background: #FF88AF;
}
.detail-box .item .attachment {
  padding: 8px 0;
  font-size: 14px;
  color: #FF88AF;
}
.detail-box .item .ad-box {
  position: relative;
  margin: 8px 0 16px;
  width: 100%;
}
.detail-box .item .ad-box .ad-tips {
  top: 0;
  font-size: 14px;
  margin: 16px 0;
}
.detail-box .item .ad-box .ad-tips ._b {
  display: inline-block;
  color: #FF88AF;
  font-weight: bold;
}
.detail-box .item .ad-box .button-box {
  position: relative;
}
.detail-box .item .ad-box .button-box::before {
  content: '';
  display: block;
  width: 100%;
  height: 120px;
  -webkit-filter: blur(5px);
          filter: blur(5px);
  background: #FF88AF url("https://jihulab.com/blank1895/emoji-wallpapers/-/raw/master/images/background.jpg") no-repeat center bottom;
  background-size: 100% auto;
}
.detail-box .item .ad-box .button-box .ad-button {
  position: absolute;
  top: 50%;
  left: 50%;
  -webkit-transform: translate(-50%, -50%);
          transform: translate(-50%, -50%);
  width: 60%;
  font-size: 14px;
  font-weight: bold;
  color: #FF88AF;
  background: #f1f1f1;
}

